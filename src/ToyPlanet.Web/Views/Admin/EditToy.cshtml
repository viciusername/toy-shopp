@model ToyPlanet.Core.Toy
@{
    ViewBag.Title = "Редактировать товар";
}
<h2>Редактировать товар</h2>
<form asp-action="EditToy" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="mb-3">
        <label class="form-label">Название</label>
        <input type="text" class="form-control" name="Name" value="@Model.Name" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Цена</label>
        <input type="number" class="form-control" name="Price" value="@Model.Price" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Категория</label>
        <input type="text" class="form-control" name="Category" value="@Model.Category" />
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>
