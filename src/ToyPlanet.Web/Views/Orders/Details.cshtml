@using ToyPlanet.Core
@{
    ViewBag.Title = "Детали заказа";
    var order = ViewBag.Order as Order;
}
<h2>Детали заказа</h2>
@if (order != null)
{
    <div class="card p-3 mb-3">
        <div><b>Номер заказа:</b> @order.Id</div>
        <div><b>Дата:</b> @order.CreatedAt.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</div>
        <div><b>Сумма:</b> @order.Total ₽</div>
        <div><b>Товары:</b></div>
        <table class="table table-bordered table-sm mt-2">
            <thead>
                <tr>
                    <th>Название</th>
                    <th>Кол-во</th>
                    <th>Цена</th>
                    <th>Сумма</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in order.Items)
            {
                <tr>
                    <td>@item.Toy.Name</td>
                    <td>@item.Quantity</td>
                    <td>@item.Toy.Price ₽</td>
                    <td>@item.LineTotal ₽</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    <a asp-action="Index" class="btn btn-secondary">Назад к заказам</a>
}
else
{
    <div class="alert alert-danger">Заказ не найден.</div>
}
